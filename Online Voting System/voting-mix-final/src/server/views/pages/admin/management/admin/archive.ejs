<!-- views/pages/admin/end_admin.ejs -->

<% let title = "Archive Admin" %>
<% let id = "archive-admin" %>
<% global.admin_loggedin = true; %>

<%- include(globals.inc + globals.head) %>



<div id="content">
	<div class="blox">
		<div id="view-<%-page.id%>" class="blox-container border">
			<div class="blox-item"><div class="blox-label"><span>Username</span></div>
			<div class="blox-contents"><%= admin.username %></div></div>

			<div class="blox-item"><div class="blox-label"><span>ID</span></div>
			<div class="blox-contents"><%= admin.id %></div></div>

			<div class="blox-item"><div class="blox-label"><span>region</span></div>
			<div class="blox-contents"><%= admin.region %></div></div>

			<div class="blox-item"><div class="blox-label"><span>role</span></div>
			<div class="blox-contents"><%= admin.role %></div></div>

			<div class="blox-item"><div class="blox-label"><span>password</span></div>
			<div class="blox-contents"><%= admin.password %></div></div>

			<div class="blox-item"><div class="blox-label"><span>salt</span></div>
			<div class="blox-contents"><%= admin.salt %></div></div>
		</div>
		<div id="edit-<%-page.id%>" class="blox-container border">
			<div class="blox-form blox-basic">
				<form id="form-<%-page.id%>" action="./" completed="../../">
					<div id="form-messages" name="form-messages">
						<div id="form-feedback" class="alert hidden" role="alert"></div>
					</div>
					<div class="form-row">
						<div class="form-group">
							<div class="form-item">
								<label for="confirm-end">Confirm End of Admin</label>
								<input type="checkbox" class="form-control" name="confirm-end" id="confirm-end" required>
							</div>
						</div>
					</div>
					<div class="form-submit">
						<button id="submit-<%-page.id%>" type="submit" class="btn btn-danger btn-confirm">Archive Admin</button>
					</div>
				</form>
			</div>
		</div>
		<div id="buttons-<%-page.id%>" class="blox-container">
			<div class="blox-item blox-row"><a class="btn btn-primary" href="../../" role="button">Return to All</a></div>
			<div class="blox-item blox-row"><a class="btn btn-primary" href="../" role="button">Return to Admin</a></div>
			<div class="blox-item blox-row"><a class="btn btn-primary" href="../edit/" role="button">Edit</a></div>
			<div class="blox-item blox-row"><a class="btn btn-danger" href="../archive/" role="button">Archive</a></div>
		</div>
	</div>
</div>

<%- include(globals.inc + globals.footer) %>
