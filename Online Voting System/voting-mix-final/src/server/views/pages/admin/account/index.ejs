	<% } else { %>
	<!--Sign in/Register-->
	<div class="row">
		<div class="col-sm-6">
			<div class="col-sm-6">
			  <div class="card">
				<div class="card-body">
					<h5 class="card-title">Log in</h5>
					<p class="card-text">If you have registered before and would like to sign in, you can do it here.</p>
					<a href="/admin/account/login/" class="btn btn-primary">Go log in</a>
				</div>
			</div>
		</div>
	</div>
	<% } %>

</div>

<%- include(globals.inc + globals.footer) %>
