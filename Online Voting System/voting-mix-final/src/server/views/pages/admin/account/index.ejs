					<ul>

					<%  for (const [ key, election ] of Object.entries(elections)) { %>
						<li class="election-<%=election.id %>"><span><%=election.consituency %></span> - <span><%=election.type %></span> - <span><%=election.start_date %></span> - <span><%=election.end_date %></span> <button onclick="location.href='/elections?loc=<%=election.id %>'">Information</button> <button onclick="location.href='/account/vote?loc=<%=election.id %>'">Vote Now</button></li>
